<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- bootstrap css link -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
    />
    <link rel="stylesheet" href="/stylesheets/updateProfile.css" />
    <title>Update Profile | Pinterest</title>
  </head>
  <body>
    <body>
      <!-- Image and text -->
      <!-- Image and text -->
      <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="#">
          <img
            src="/images/pinterest clone.png"
            width="30"
            height="30"
            class="d-inline-block align-top"
            alt=""
          />
          Pinterest
        </a>
        <a class="navbar-brand ml-3" href="/feed">Home</a>
        <button
          class="navbar-toggler"
          type="button"
          data-toggle="collapse"
          data-target="#navbarNav"
          aria-controls="navbarNav"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav ml-auto">
            <a class="navbar-brand ml-23" href="/profile">Profile</a>
            <a class="navbar-brand ml-3" href="/upload">Create Pin</a>
            <a class="navbar-brand ml-3" href="/logout">logout</a>
          </ul>
        </div>
      </nav>

      <div class="login-box">
        <h2>Update profile</h2>

        <form
          class="uploadForm"
          action="/updateProfile"
          method="post"
          enctype="multipart/form-data"
        >
          <div class="user-box">
            <input type="text" placeholder="username" name="username" />
          </div>
          <div class="user-box">
            <input type="text" placeholder="full name" name="fullname" />
          </div>
          <div class="user-box">
            <input type="text" placeholder="categories" name="categories" />
          </div>
          <div class="user-box">
            <input type="text" placeholder="description" name="description" />
          </div>

          <div class="user-box">
            <p class="label">profile photo</p>
            <input type="file" name="dp" />
          </div>
          <div class="user-box">
            <p class="label">cover photo</p>
            <input type="file" name="coverPhoto" />
          </div>
          <button class="upload">
            <span></span>
            <span></span>
            <span></span>
            <span></span>
            Save Changes
          </button>
        </form>
      </div>
      <script defer src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    </body>
  </body>
</html>
