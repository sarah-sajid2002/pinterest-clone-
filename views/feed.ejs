    <div class="container">
      <% allImages.forEach(function(post) { %>
      <div class="box">
        <a href="/allImages">
          <img
            class="boxImg"
            src="/images/uploads/<%= post.image %>"
            alt="image"
          />
        </a>
        <div class="title">
          <p class="title">Title: <%= post.text %></p>
        </div>
        <img
          class="userImage"
          src="/images/uploads/<%= post.user.dp %>"
          alt=""
        />
        <p class="title"><%= post.user.username %></p>
      </div>
      <% }); %>
    </div>

    <script src="https://code.jquery.com/jquery-3.3.1.js"></script>
    <script src="/javascripts/feed.js"></script>
